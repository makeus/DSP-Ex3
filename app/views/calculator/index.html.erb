
<div class="container">
  <div class="results-container">
    <div class="results">
    </div>
    <div class="loader">
      <span class="spinner"></span>
    </div>
    <span class="timer"></span>
  </div>

  <%= form_tag 'javascript:void()' do %>
  <%= text_field_tag 'input', nil, placeholder: '1 + 2 * 3 / 4' %>
  <%= submit_tag "Go"%>
  <%= link_to 'simplify', 'javascript:void(0)', class: 'simplify' %>
  <% end %>

  <%= label_tag 'cache-size', 'Cache size' %>
  <%= number_field_tag 'cache-size', 3000, min: 0, class: 'cache-size' %>
</div>